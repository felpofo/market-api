{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build",
    "strict": true,
    "target": "ES6",
    "lib": ["ES6", "ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*", "build/*"],
      "@controllers/*": ["src/controllers/*", "build/controllers/*"],
      "@services/*": ["src/services/*", "build/services/*"],
      "@middlewares/*": ["src/middlewares/*", "build/middlewares/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "tests"]
}
